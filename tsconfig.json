{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@controllers": [
        "controllers"
      ],
      "@resources": [
        "resources"
      ],
      "@routes": [
        "routes"
      ],
      "@services": [
        "services"
      ],
      "@types": [
        "types"
      ]
    },
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2023"
  },
  "include": [
    "src"
  ]
}
