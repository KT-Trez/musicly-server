{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "bundle",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2022"
  },
  "exclude": [
    "gen",
    "node_modules",
    "tests"
  ],
  "include": [
    "src",
    "typings"
  ]
}
